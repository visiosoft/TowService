<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_tow"
                app:tint="@color/accent_blue"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Request Tow Truck"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/text_primary"/>
        </LinearLayout>

        <!-- Location Selection Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/accent_blue"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location Details"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required"
                        android:textSize="10sp"
                        app:chipBackgroundColor="@color/accent_orange"
                        app:chipStrokeColor="@color/accent_orange"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <!-- Pickup Location -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_location"
                    app:startIconTint="@color/accent_green"
                    app:boxStrokeColor="@color/accent_green"
                    app:hintTextColor="@color/accent_green">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pickupLocationEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pickup Location"
                        android:inputType="textPostalAddress"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="@color/text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Location Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/divider"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_tow"
                        app:tint="@color/accent_blue"
                        android:layout_marginHorizontal="12dp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/divider"/>
                </LinearLayout>

                <!-- Drop Location -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_location"
                    app:startIconTint="@color/accent_orange"
                    app:boxStrokeColor="@color/accent_orange"
                    app:hintTextColor="@color/accent_orange">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dropLocationEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Drop Location"
                        android:inputType="textPostalAddress"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="@color/text_primary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Map Preview Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <!-- Map Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="@color/background_secondary"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_tow_truck"
                            app:tint="@color/accent_blue"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Route Preview"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/updateLocationButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Update"
                            android:textSize="11sp"
                            app:icon="@drawable/ic_location"
                            app:iconSize="14dp"
                            app:cornerRadius="16dp"
                            app:backgroundTint="@color/accent_blue"
                            style="@style/Widget.MaterialComponents.Button"/>
                    </LinearLayout>

                    <!-- Map Container -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/background_secondary"
                        android:padding="1dp">

                        <fragment
                            android:id="@+id/dropMap"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <!-- Map Overlay for better UX -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/map_overlay_gradient"
                            android:alpha="0.1"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Trip Details Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_tow"
                        app:tint="@color/accent_blue"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trip Details"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/routeStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Select locations"
                        android:textSize="10sp"
                        android:textColor="@color/text_hint"
                        android:background="@color/chip_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <!-- Info Cards Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- First Row: Distance and Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <!-- Distance Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/background_secondary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_location"
                                    app:tint="@color/accent_blue"
                                    android:layout_marginBottom="6dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Distance"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginBottom="2dp"/>

                                <TextView
                                    android:id="@+id/distanceText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Time Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/background_secondary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_tow"
                                    app:tint="@color/accent_green"
                                    android:layout_marginBottom="6dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ETA"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginBottom="2dp"/>

                                <TextView
                                    android:id="@+id/estimatedTimeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Second Row: Rate and Cost -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Rate Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/background_secondary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_credit_card"
                                    app:tint="@color/accent_green"
                                    android:layout_marginBottom="6dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rate"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginBottom="2dp"/>

                                <TextView
                                    android:id="@+id/rateText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3 AED/km"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/accent_green"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Cost Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/chip_background">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_credit_card"
                                    app:tint="@color/accent_orange"
                                    android:layout_marginBottom="6dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Cost"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginBottom="2dp"/>

                                <TextView
                                    android:id="@+id/estimatedCostText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/accent_orange"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Vehicle Type Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_tow_truck"
                        app:tint="@color/accent_blue"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vehicle Type"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required"
                        android:textSize="10sp"
                        app:chipBackgroundColor="@color/accent_orange"
                        app:chipStrokeColor="@color/accent_orange"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/vehicleTypeChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/carChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš— Car"
                        android:checkable="true"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/divider"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/text_primary"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/bikeChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸï¸ Bike"
                        android:checkable="true"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/divider"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/text_primary"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/truckChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš› Truck"
                        android:checkable="true"
                        app:chipBackgroundColor="@color/chip_background"
                        app:chipStrokeColor="@color/divider"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/text_primary"/>
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Payment Method Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            app:strokeColor="@color/divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_credit_card"
                        app:tint="@color/accent_blue"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Payment Method"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"/>

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required"
                        android:textSize="10sp"
                        app:chipBackgroundColor="@color/accent_orange"
                        app:chipStrokeColor="@color/accent_orange"
                        app:chipStrokeWidth="1dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <!-- Payment Method Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Payment Option -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPaymentCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/background_secondary"
                        app:strokeColor="@color/divider"
                        app:strokeWidth="1dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <!-- Card Icon -->
                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/circle_bg"
                                android:gravity="center"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_credit_card"
                                    app:tint="@color/accent_blue"/>
                            </LinearLayout>

                            <!-- Card Details -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’³ Credit/Debit Card"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginBottom="4dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Secure payment with your card"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>

                            <!-- Selection Indicator -->
                            <ImageView
                                android:id="@+id/cardPaymentCheck"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_check"
                                app:tint="@color/accent_green"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Cash Payment Option -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cashPaymentCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/background_secondary"
                        app:strokeColor="@color/divider"
                        app:strokeWidth="1dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <!-- Cash Icon -->
                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/circle_bg"
                                android:gravity="center"
                                android:layout_marginEnd="16dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_cash"
                                    app:tint="@color/accent_green"/>
                            </LinearLayout>

                            <!-- Cash Details -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’µ Cash Payment"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginBottom="4dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pay with cash to the driver"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"/>
                            </LinearLayout>

                            <!-- Selection Indicator -->
                            <ImageView
                                android:id="@+id/cashPaymentCheck"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_check"
                                app:tint="@color/accent_green"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Payment Method Error -->
                <TextView
                    android:id="@+id/paymentMethodError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/missing_payment_method"
                    android:textSize="12sp"
                    android:textColor="@color/error_red"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Request Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/requestButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/request_tow_now_button"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="32dp"
            app:elevation="12dp"
            app:backgroundTint="@color/accent_blue"
            android:textColor="@color/white"
            app:icon="@drawable/ic_tow"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            android:alpha="0.6"
            android:enabled="false"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView> 